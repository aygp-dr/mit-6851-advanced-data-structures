# Project configuration for MIT 6.851 Advanced Data Structures
export PROJECT_NAME="mit-6851-advanced-data-structures"
export PROJECT_ROOT="$(pwd)"

# Guile/Scheme environment
export GUILE_LOAD_PATH="${PROJECT_ROOT}/lib:${GUILE_LOAD_PATH}"
export GUILE_LOAD_COMPILED_PATH="${PROJECT_ROOT}/lib:${GUILE_LOAD_COMPILED_PATH}"

# Emacs configuration
export EMACS_CONFIG="${PROJECT_ROOT}/mit-6851-advanced-data-structures.el"

# Development environment
export EDITOR="emacs -nw"
export VISUAL="${EDITOR}"

# Load direnv if available
if command -v direnv &> /dev/null; then
    echo "Project: ${PROJECT_NAME}"
    echo "Root: ${PROJECT_ROOT}"
fi